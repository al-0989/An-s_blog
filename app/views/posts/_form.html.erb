<%= form_for @post do |f| %>
<div class="title">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.label :category_id %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>
