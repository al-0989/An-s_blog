<div class="main-page">
  <h1>Sign In</h1>
  <br>
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <p><%= notice %></p>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger" role="alert">
      <p><%= alert %></p>
    </div>
  <% end %>

  <%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Log in" %>
  <% end %>
</div>
