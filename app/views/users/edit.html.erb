<div class="main-page">
  <h1>Update Profile</h1>

  <% if notice %>
    <div class="alert alert-success" role="alert">
      <p><%= notice %></p>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger" role="alert">
      <p><%= alert %></p>
    </div>
  <% end %>

  <% if @user.errors.any?%>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
  <% end %>

  <%= form_for @user do |f| %>
    <div>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
